{
  "id": "uv",
  "version": "1.0.0",
  "name": "uv Package Manager",
  "description": "Installs uv - An extremely fast Python package installer and resolver, written in Rust",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Version of uv to install (e.g., 'latest', '0.5.0', '0.4.30')"
    }
  },
  "containerEnv": {
    "PATH": "$HOME/.local/bin:${PATH}"
  }
}
