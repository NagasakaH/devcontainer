{
  "id": "editorconfig-prettier",
  "version": "1.0.0",
  "name": "EditorConfig Prettier",
  "description": "Installs Prettier for EditorConfig validation and formatting. Prettier natively supports EditorConfig, no additional plugins required.",
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "Version of Prettier to install"
    },
    "installHelperScripts": {
      "type": "boolean",
      "default": true,
      "description": "Install helper scripts (editorconfig-check, editorconfig-format) to /usr/local/bin"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/node"
  ]
}
